{ 
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "overrides": [
      {
        "files": ["**/*.{ts,tsx}"],
        "customSyntax": "postcss-styled-syntax"
      }
    ],
    "rules": {
      "selector-class-pattern": "([a-z]+([A-Z][a-z0-9]+)*)",
      "no-empty-source": null
    }
}